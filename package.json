{
  "name": "plate",
  "version": "0.0.1",
  "description": "Whats on your plate?",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/plate-app.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/plate-app/issues"
  },
  "keywords": [
    "svelte",
    "plate",
    "social"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "prettier": "prettier --write \"**/*.{tsx,ts,css,md,svelte,js,vue,html}\"",
    "eslint": "eslint --ext js,svelte ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{svelte,md,js,css,html}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "autoprefixer": "^9.7.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "postcss": "^7.0.26",
    "postcss-load-config": "^2.1.0",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.27.14",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.3",
    "svelte": "^3.16.7",
    "svelte-preprocess": "^3.3.0",
    "tailwindcss": "^1.1.4"
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^5.12.0",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "faunadb": "^2.10.2",
    "page": "^1.11.5",
    "sirv-cli": "^0.4.5"
  }
}
